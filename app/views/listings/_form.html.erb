<%= simple_form_for(@listing, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { rows: "6"} %>
    <%= f.input :location %>
    <%= f.input :vehicle %>
    <%= f.input :image, label: "Upload an image" %>
    <%= f.input :rate %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>
